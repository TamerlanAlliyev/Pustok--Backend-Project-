                                @if (Model.CurrentPage != 1)
                                {
                                    <li>
                                        <a asp-action="ProductCategoryFilter" asp-controller="Product" class="single-btn prev-btn " asp-route-page="@(Model.CurrentPage-1)">
                                            |<i class="zmdi zmdi-chevron-left"></i>
