@model ForgotPasswordVM

@await Html.PartialAsync("_MobileMenuPartialView")
@await Html.PartialAsync("_BreadCrumbPartialView")

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-center">
                <div class="">
                    <form method="post" >
                        <div class="login-form">
                            <h4 class="login-title">Reset your Password</h4>
                            <p><span class="font-weight-bold">I am a returning customer</span></p>
                            <div class="row">
                                <div class="col-md-12 col-12 mb--15">
                                    <label for="email">Enter your email address here...</label>
                                    <input asp-for="Email" class="mb-0 form-control" type="email" id="email1"
                                           placeholder="Enter you email address here...">
                                </div>
                                <div style="display:flex; justify-content:space-between">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-outlined">Send</button>
                                    </div>
                                    <div class="text-center">
                                        <div style="width:200px">
                                            <a class="small" asp-action="Register">Create an Account!</a>
                                        </div>
                                        <div style="width:200px">
                                            <a class="small" asp-action="Login">Already have an account? Login!</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</main>




@section BrandSlider {
    @await Html.PartialAsync("_BrandSliderPartialView")
}