@model AccountRegisterVM
@await Html.PartialAsync("_MobileMenuPartialView")
@await Html.PartialAsync("_BreadCrumbPartialView")
<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row">
            <div class="col-md-12 d-flex justify-content-center">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">New Customer</h4>
                        <p><span class="font-weight-bold">I am a new customer</span></p>
                        <div class="row">
                            <div class="col-lg-6 mb--20 mb--15">
                                <label for="email"> Name</label>
                                <input asp-for="Name" class="mb-0 form-control" type="text" id="name"
                                       placeholder="Enter your  Name">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label for="email">Surname</label>
                                <input asp-for="Surname" class="mb-0 form-control" type="text" id="name"
                                       placeholder="Enter your Surname">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label for="email">Username</label>
                                <input asp-for="Username" class="mb-0 form-control" type="text" id="email" placeholder="Enter your Username">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label for="email">Email</label>
                                <input asp-for="Email" class="mb-0 form-control" type="email" id="email" placeholder="Enter Your Email Address Here..">
                            </div>

                            <div class="col-lg-6 mb--20">
                                <label for="password">Password</label>
                                <input asp-for="Password" class="mb-0 form-control" type="password" id="password" placeholder="Enter your password">
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label for="password">Repeat Password</label>
                                <input asp-for="ConfirmPassword" class="mb-0 form-control" type="password" id="repeat-password" placeholder="Repeat your password">
                            </div>




                            <div style="display:flex; justify-content:space-between">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Register</button>
                                </div>
                                <div class="text-center">
                                    <div style="width:200px">
                                        <a class="small" asp-action="ForgotPassword">Forgot Password?</a>
                                    </div>
                                    <div style="width:200px">
                                        <a class="small" asp-action="Login">Already have an account? Login!</a>

                                    </div>
                                </div>
                            </div>





                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

@section BrandSlider {
    @await Html.PartialAsync("_BrandSliderPartialView")
}
