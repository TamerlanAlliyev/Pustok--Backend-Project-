@model ProductDetailVM
@{
    // int con = 1;
}

<div class="container mt-5" method="post">
    <div class="card">
        <div class="card-body mt-5 ml-5 ">
            <div class="row">

                <div class="col-lg-10 col-md-2 col-sm-10 ml-3 mr-3">

                    <div class="d-flex justify-content-center align-items-center">

                        <div class="mr-5">
                            <h3 class="box-title mb-4">@Model.Name</h3>
                            <div class="mr-5 d-flex gap-2">

                                <div class="text-center">
                                    <a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>
                                </div>
                                <div class="text-center">
                                    <a asp-area="Admin" asp-controller="Product" asp-action="SoftDelete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Remove</a>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>


                                <tr>
                                    <td width="390">Author</td>
                                    <td>@Model.Author</td>
                                </tr>
                                <tr>
                                    <td width="390">Product Code</td>
                                    <td>@Model.ProductCode</td>
                                </tr>
                                <tr>
                                    <td width="390">Reward Point</td>
                                    <td>@Model.RewardPoint</td>
                                </tr>
                                <tr>
                                    <td width="390">Count</td>
                                    <td>@Model.Count</td>
                                </tr>
                                <tr>
                                    <td width="390">Ex Tax</td>
                                    <td>@Model.ExTax</td>
                                </tr>
                                <tr>
                                    <td width="390">Sell Price</td>
                                    <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <td width="390">Discount Price</td>
                                    <td>@Model.DiscountPrice</td>
                                </tr>
                                <tr>
                                    <td width="390">Creat by</td>
                                    <td>@Model.CreatedBy</td>
                                </tr>
                                <tr>
                                    <td width="390">Created date</td>
                                    <td>@Model.Created</td>
                                </tr>
                                <tr>
                                    <td width="390">Modified by</td>
                                    <td>@Model.ModifiedBy</td>
                                </tr>
                                <tr>
                                    <td width="390">Modified date</td>
                                    <td>@Model.Modified</td>
                                </tr>
                                <tr>
                                    <td width="390">IP Address</td>
                                    <td>@Model.IPAddress</td>
                                </tr>
                                <tr>
                                    <td width="390">Description</td>
                                    <td>@Model.Description</td>
                                </tr>
                                <tr>
                                    <td width="390">How many people added this product to their cart?</td>
                                    <td>@(Model.BasketList != null ? Model.BasketList.Count() : 0)</td>
                                </tr>
                                <tr>
                                    <td width="390">How many people added this product to their wishlist?</td>
                                    <td>@(Model.WishList != null ? Model.WishList.Count() : 0)</td>
                                </tr>

                                <tr>
                                    <td width="390">Main Image </td>
                                    <td>
                                        <div class="d-flex g-lg-3">
                                            <div class="image-file mt-3" style="margin-left: 25px;">
                                                <img style="width:150px;height:150px;object-fit:cover;" src="~/cilent/image/products/@Model.MainImage" />
                                            </div>
                                        </div>
                                    </td>
                                </tr>



                                <tr>
                                    <td width="390">Hover Image </td>
                                    <td>
                                        <div class="d-flex g-lg-3">
                                            <div class="image-file mt-3" style="margin-left: 25px;">
                                                <img style="width:150px;height:150px;object-fit:cover;" src="~/cilent/image/products/@Model.HoverImage" />
                                            </div>
                                        </div>
                                    </td>
                                </tr>


                                <tr>
                                    <td width="390">Additional Images</td>
                                    <td>
                                        <div class="d-flex g-lg-3">
                                            <div class="image-file mt-3 d-flex flex-wrap gap-4" style="margin-left: 25px;">
                                                @if (Model.AdditionalImages != null)
                                                {
                                                    @foreach (var image in Model.AdditionalImages)
                                                    {
                                                        <img style="width:150px;height:150px;object-fit:cover;" src="~/cilent/image/products/@image" />
                                                    }
                                                }
                                                else
                                                {
                                                    <p>Additional Images are blank</p>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                </tr>


                            </tbody>
                        </table>
                    </div>




                </div>
            </div>
        </div>
    </div>
</div>

@section Script {

}